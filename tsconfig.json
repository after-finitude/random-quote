{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src", "types"],
  "exclude": ["node_modules", "public"],

  "main": "src/main.ts",

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~components/*": ["./src/components/*"],
      "~pages/*": ["./src/pages/*"],
      "~data/*": ["./src/data/*"]
    },
    "noEmit": true,
    "resolveJsonModule": true
  }
}
