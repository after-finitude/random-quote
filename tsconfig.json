{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules/*", "public/*"],
  "main": "src/main.ts",

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~components/*": ["./src/components/*"],
      "~pages/*": ["./src/pages/*"]
    },
    "noEmit": true,
    "resolveJsonModule": true
  }
}
